	<form 
		class="form-horzontal" 
		id="required_on_shift_form"
		style="margin-bottom: 0px;"
		method="post"
		action="https://webaddress/~*Mid*/private/Capstone/processing.php"
	>
	
	<input type="hidden" name="required_on_shift" value="1" />
	
	<div class="form-group">
		<label class="col-md-4">Year:  </label>
		<div class="col-md-6">
		<input class="form-control" min="{{year}}" value="{{year}}" name="number_required_year" type="number" required autofocus> 
		</div>
	</div>
	
	<br>
	
	<div class="form-group">
		<label class="col-md-4">Week:  </label>
		<div class="col-md-6">
		<input class="form-control" min="0" name="number_required_week" type="number" required autofocus> 
		</div>
	</div>
	
	<br>
	
	<div class="form-group">
		<label class="col-md-4">Monday:  </label>
		<div class="col-md-6">
		<input class="form-control" min="0" max="{{peopleAvailable}}" name="number_required_monday" type="number" required autofocus> 
		</div>
	</div>
	
	<br>
	
	<div class="form-group">
		<label class="col-md-4">Tuesday:  </label>
		<div class="col-md-6">
		<input class="form-control" min="0" max="{{peopleAvailable}}" name="number_required_tuesday" type="number" required autofocus> 
		</div>
	</div>
	
	<br>
	
	<div class="form-group">
		<label class="col-md-4">Wednesday:  </label>
		<div class="col-md-6">
		<input class="form-control" min="0" max="{{peopleAvailable}}" name="number_required_wednesday" type="number" required autofocus> 
		</div>
	</div>
	
	<br>
	
	<div class="form-group">
		<label class="col-md-4">Thursday:  </label>
		<div class="col-md-6">
		<input class="form-control" min="0" max="{{peopleAvailable}}" name="number_required_thursday" type="number" required autofocus> 
		</div>
	</div>
	
	<br>
	
	<div class="form-group">
		<label class="col-md-4">Friday:  </label>
		<div class="col-md-6">
		<input class="form-control" min="0" max="{{peopleAvailable}}" name="number_required_friday" type="number" required autofocus> 
		</div>
	</div>
	
	<br>

	<div class="modal-footer">
		<button id="required_on_shift_submit" type="submit" class="btn btn-default btn-sm" >Submit</button>
		<button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
	</div>
	
	
</form>
