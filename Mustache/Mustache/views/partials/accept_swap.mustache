<form
  class="form-horzontal"
  id="accept_swap_form"
  style="margin-bottom: 0px;"
  method="post"
  action="https://webaddress/~*Mid*/private/Capstone/processing.php"
>

{{#swap_info}}
<input type="hidden" value="1" name="swap_accept_input">
<input type="hidden" value="{{Initiator_Shift_PK}}" name="Initiator_Shift_ID">
<input type="hidden" value="{{Receiver_Shift_PK}}" name="Receiver_Shift_ID">
<input type="hidden" value="{{SR_PK}}" name="Swap_ID">
{{/swap_info}}

<div class="form-group">
<label class="col-md-4">Do you accept the proposed swap?</label>
  <div class="col-md-6">
  <select required name="select_acceptance" id="select_acceptance">
    <option value="">Select an Option</option>
    <option value="1">Yes</option>
    <option value="2">No</option>
  </select>
  </div>
  <br>
</div>

<br>

<div class="modal-footer">
  <button id="swap_submit" type="submit" class="btn btn-default btn-sm" >Submit</button>
  <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
</div>


</form>
